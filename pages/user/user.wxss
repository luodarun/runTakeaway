/* pages/user/user.wxss */
page{
  background-color: rgb(253, 246, 244);
}
.user-view {
 display: flex;
 align-items: center;
 background: #FFD161;
}
.user-text {
  font-size: 40rpx;
  margin: 10rpx 0 10rpx 20rpx;
  flex: 1;
}
.user-text2 {
  font-size: 40rpx;
  margin: 10rpx 10rpx 10rpx 0;
}
.user-image {
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx 10rpx 10rpx 20rpx;
  border-radius: 25rpx;
}
.user-image2 {
  width: 40rpx;
  height: 40rpx;
  margin: 10rpx 10rpx 10rpx 20rpx;
}
.user-view2 {
 background: #fff; 
 display: flex;
 align-items: center;
 border-bottom: 1rpx solid rgb(253, 246, 244);
 padding-right: 30rpx;
}
.user-view3 {
 padding-right: 13px;
 position: relative;
 text-align: right;
 color: #999;
}
.user-view3::after {
    content: " ";
    display: inline-block;
    height: 6px;
    width: 6px;
    border-width: 2px 2px 0 0;
    border-color: #c8c8cd;
    border-style: solid;
    transform: matrix(.71,.71,-.71,.71,0,0);
    position: absolute;
    top: 50%;
    margin-top: -4px;
    right: 2px;
}
.user-button {
  display: flex;
  margin-top: 20rpx;
  background: #fff;
  height: 100rpx;
  justify-content: center;
  align-items: center;
}
.user-button :active {
  color: #FFD161;
}
.user-button :hover {
  color: #FFD161;
}